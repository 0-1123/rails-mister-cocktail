<%= image_tag "back-new.jpeg", alt: "alttext", style: "position: absolute; z-index: -1; width: 100vw; filter: brightness(60%);"%>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon one fixed-top">
      <%= link_to cocktails_path, class: "navbar-brand" do %>
        <i class="large material-icons" style="color: white;">local_bar</i>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Cocktails", cocktails_path, class: "nav-link", style: "color: white;" %>
          </li>
          <li class="nav-item">
            <%= link_to "Add cocktail", new_cocktail_path, class: "nav-link", style: "color: white;" %>
          </li>
        </ul>
      </div>
    </div>
    <br>
    <br>
    <br>
<div class="container mt-2">
<h1 style="color: white; position: fixed;">Add ingredients</h1>
  <br>
  <br>
  <br>
<div class="card-trans mb-3 p-3" style="width: 500px; position: fixed;" >
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-group", style="color: white;">
    <%= f.association :ingredient %>
  </div>

  <div class="form-group">
    <%= f.label :description, style: "color: white;" %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-warning' %>
<% end %>
</div>
</div>
